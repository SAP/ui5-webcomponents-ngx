{
  "name": "documentation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/documentation/src",
  "prefix": "ui-angular",
  "targets": {
    "compodoc-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx compodoc -p libs/ui5-angular/tsconfig.lib.json -e json -d apps/documentation --disableSourceCode --disableDomTree --disableTemplateTab --disableStyleTab --disableGraph --disableCoverage --disablePrivate --disableProtected --disableInternal --disableLifeCycleHooks --disableRoutesGraph --disableSearch --disableDependencies"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/documentation/**/*.ts",
          "apps/documentation/**/*.html"
        ]
      }
    },
    "sync": {
      "executor": "@ui5/webcomponents-nx:sync",
      "options": {
        "configFiles": [
          "apps/documentation/api-json.config.ts",
          "apps/documentation/stories-sync.conf.ts"
        ]
      },
      "outputs": [
        "apps/documentation/src/app/stories"
      ],
      "dependsOn": ["compodoc-generate"]
    },
    "serve": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/documentation/.storybook",
        "browserTarget": "documentation:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": ["sync"]
    },
    "build": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/documentation",
        "configDir": "apps/documentation/.storybook",
        "browserTarget": "documentation:build",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "apps/documentation"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
