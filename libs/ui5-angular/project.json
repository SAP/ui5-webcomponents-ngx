{
  "name": "ui5-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui5-angular",
  "prefix": "ui-angular",
  "targets": {
    "sync": {
      "command": "ts-node ./postinstall.js",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "tools:build-partial",
      "outputs": [
        "{options.distPath}"
      ],
      "options": {
        "includedFiles": [
          "{projectRoot}/config/**/*",
          "{projectRoot}/content-density/**/*",
          "{projectRoot}/fiori/i18n/**/*",
          "{projectRoot}/icons/**/*",
          "{projectRoot}/theming/**/*",
          "{projectRoot}/i18n/**/*",
          "{projectRoot}/*.json",
          "{projectRoot}/README.md",
          "{projectRoot}/*.conf.js",
          "{projectRoot}/postinstall.js"
        ],
        "excludedFiles": [
          "{projectRoot}/theming/supported-themes.ts",
          "{projectRoot}/tsconfig.spec.json",
          "{projectRoot}/compodocrc.json",
          "{projectRoot}/project.json"
        ],
        "distPath": "{workspaceRoot}/dist/{projectRoot}"
      },
      "configurations": {
        "production": {
          "pack": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ui5-angular/jest.config.ts"
      }
    }
  },
  "tags": []
}
